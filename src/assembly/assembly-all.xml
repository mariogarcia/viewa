<assembly>
	<id>all</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>org.viewaframework:viewaframework-api</include>
				<include>org.viewaframework:viewaframework-core</include>
				<include>org.viewaframework:viewaframework-spring</include>
				<include>org.viewaframework:viewaframework-widget</include>
				<include>org.viewaframework:viewaframework-docking</include>				
				<include>org.viewaframework:viewaframework-test</include>
				<include>org.viewaframework:viewaframework-binding</include>
				<include>org.viewaframework:viewaframework-quickstart</include>				
			</includes>
			<binaries>
				<outputDirectory>dist</outputDirectory>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
			</binaries>
			<sources>
				<outputDirectoryMapping>projects/${module.artifactId}
				</outputDirectoryMapping>
				<fileSets>
					<fileSet>
						<outputDirectory>src</outputDirectory>
						<excludes>
							<exclude>target/**</exclude>
						</excludes>
						<directory>src</directory>
					</fileSet>
					<fileSet>
						<includes>
							<include>pom.xml</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<outputDirectory></outputDirectory>
			<excludes>
				<exclude>assembly-all.xml</exclude>
			</excludes>
			<directory>src/assembly</directory>
		</fileSet>
	</fileSets>
</assembly>